{
  "manifest_version": 2,
  "name": "CurseFricker",
  "version": "1.0",

  "description": "Fricks curseforge and makes a modrinth pack",

  "icons": {
    "48": "icons/icon.png"
  },
  
  "permissions": [
    "storage",
    "activeTab",
    "webRequest",
    "webNavigation",
    "<all_urls>"
  ],

  "content_scripts": [
    {
      "matches": ["https://www.curseforge.com/minecraft/modpacks/*"],
      "js": ["cursefricker.js"]
    }
  ]
}
